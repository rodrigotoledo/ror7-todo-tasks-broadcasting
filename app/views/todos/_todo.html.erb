<div id="<%= dom_id todo %>" class="border border-1 border-gray-200 p-4 mb-5 mt-5">
  <p class="my-5">
    <strong class="block font-medium mb-1">Title:</strong>
    <%= todo.title %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Content:</strong>
    <%= todo.content %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Done?!:</strong>
    <%= todo.done ? "Yes" : "No" %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this todo", todo, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to "Edit this todo", edit_todo_path(todo), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
  <% end %>
</div>
