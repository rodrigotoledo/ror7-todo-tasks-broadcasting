<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

    <h1 class="font-bold text-4xl">Todos</h1>
    <%= turbo_frame_tag Todo.new do %>
    <%= link_to "New todo", new_todo_path, class: "rounded-lg w-auto inline-block py-3 px-5 bg-blue-600 text-white block font-medium" %>
    <% end %>

  <%= turbo_stream_from "todos" %>
  <div class="min-w-full" id="todos">
    <%= render @todos %>
  </div>
</div>
